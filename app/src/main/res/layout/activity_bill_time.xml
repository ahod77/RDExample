<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarBT"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:textColorPrimary="@color/colorPrimary"
        android:actionMenuTextColor="@color/colorPrimary"
        android:elevation="4dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bill_time_label"
        android:id="@+id/billTimeLabel"
        android:textStyle="bold"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/toolbarBT"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="@string/decrement_hours"
        android:id="@+id/decrementHoursBT"
        android:singleLine="true"
        android:layout_below="@+id/incrementHoursBT"
        android:layout_alignLeft="@+id/incrementHoursBT"
        android:layout_alignStart="@+id/incrementHoursBT" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="@string/increment_hours"
        android:id="@+id/incrementHoursBT"
        android:width="45dp"
        android:height="45dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/billTimeLabel"
        android:layout_alignRight="@+id/billTimeLabel"
        android:layout_alignEnd="@+id/billTimeLabel"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bill_time"
        android:id="@+id/billTimeTextView"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_below="@+id/incrementHoursBT"
        android:layout_alignLeft="@+id/billTimeLabel"
        android:layout_alignStart="@+id/billTimeLabel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/submitBtnBT"
        android:background="@android:color/holo_green_light"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/decrementHoursBT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>